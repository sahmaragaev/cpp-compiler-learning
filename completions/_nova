#compdef nova

_nova() {
    local curcontext="$curcontext" state line
    typeset -A opt_args

    _arguments \
        '1: :->input' \
        '2: :->output' \
        '(- *)'{-h,--help}'[show help information]'

    case $state in
        input)
            _files -g '*.nova'
            ;;
        output)
            _files -g '*.c'
            ;;
    esac
}

_nova